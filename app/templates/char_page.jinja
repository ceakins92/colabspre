<!-- Hero Image -->

<div class="hero-image2">
    <div class="hero-text"><br><br>

        <h1 class="logo-text">| Co.Lab & Coding Temple |</h1>
        <h4>
            <font color="green">{API Character Search}</font>
        </h4><br />

    </div>
