        <article class="main-articles">
            <center>
                <br>
                <br>
                <h4>S e a r c h &nbsp&nbspC o m i c &nbsp&nbspC h a r a c t e r s</h4><br>
                </strong><br><br>

            </center>

            <!-- Search Character -->

            <center>
                <form method="POST" action="{{ url_for('api.char_page')}}">
                    <label for="search_char">Search for a character</label>
                    <input type="text" id="search_char" placeholder="Character Name" name="search_char" required>
                    <button class="btn btn-dark" type="submit">Search</button>
                </form>
                <br /><br />
            </center>

            <!-- Character Info -->

            {% if data %}
            <div class="row">
                <div class="col text-center">
                    <center>
                        <hr>
                        <font style="color:rgb(6, 183, 253)"><strong>Character Located!</strong></font><br><br>
                        <h2>{{ data['Character Name'] }}</h2>
                        <img src="{{ data['thumbnail'] }}" alt="{{ data['name']}}" width="500px"
                            class="img-fluid"><br><br>
                    </center>
                    <p>{{ data['Description (if available)'] }}</p><br>
                    <hr>
                    <p>{{ data['Comics Appeared In'] }}</p>
                    <p>{{ data['Comic Collection via Marvel'] }}</p>
                    <hr>


                </div>

            </div>
            {% else %}

            <!-- No Character Found -->

            <div class="row">
                <br /><br />
                <hr>
                <br />
                <figure>
                    <center><img src="{{url_for('static', filename='/img/putonyourmask.jpg')}}" align="middle"
                            width="400px" class="side-img" />
                    </center>
                </figure>
                <br><br><br>

                <hr>
                <div class="col text-center"></div>
            </div>
            {% endif %}


    </div>

    </article>
